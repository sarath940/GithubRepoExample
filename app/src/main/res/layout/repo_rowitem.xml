<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        card_view:cardBackgroundColor="#d3cdcd"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardPreventCornerOverlap="false"
        android:layout_margin="5dp">
        <LinearLayout
            android:id="@+id/mRowLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/mAvatarImage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@mipmap/ic_launcher" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/mName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/text15"/>
                <TextView
                    android:id="@+id/mFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FullName"
                    android:textSize="@dimen/text15"/>
                <TextView
                    android:id="@+id/mWatchCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WatchCount"
                    android:textSize="@dimen/text15"/>
                <TextView
                    android:id="@+id/mCommitCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CommitCount"
                    android:textSize="@dimen/text15"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
