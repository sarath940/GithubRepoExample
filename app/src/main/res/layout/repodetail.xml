<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="9"
    android:background="#d3cdcd">
<ImageView
    android:id="@+id/mImageView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2"
    android:layout_marginLeft="@dimen/text5"
    android:layout_marginRight="@dimen/text5"
    android:layout_gravity="center"
    android:src="@drawable/ic_launcher_background"/>
    <TextView
        android:id="@+id/repoDetailName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="@dimen/text5"
        android:layout_marginRight="@dimen/text5"
        android:layout_marginTop="15dp"
        android:text="Name:  "/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_marginLeft="@dimen/text5"
        android:layout_marginRight="@dimen/text5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="projetcdetails:  "
            />
        <TextView
            android:id="@+id/repoProjectDetailsLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="projetcdetails"
            android:autoLink="web"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:layout_marginLeft="@dimen/text5"
        android:layout_marginRight="@dimen/text5"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrpition:  "
            />
        <TextView
            android:id="@+id/repoDescrpition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrpition"
            android:autoLink="web"/>
    </LinearLayout>


    <TextView
        android:id="@+id/contribution"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/text5"
        android:layout_marginRight="@dimen/text5"
        android:layout_weight="0.5"
        android:text="Contributors:" />
    <GridView
        android:id="@+id/gridView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:columnWidth="100dp"
        android:layout_marginLeft="@dimen/text5"
        android:layout_marginRight="@dimen/text5"
        android:gravity="center"
        android:horizontalSpacing="5dp"
        android:numColumns="3"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dp"></GridView>
</LinearLayout>
